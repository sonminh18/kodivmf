		<setting id="clear_cache_on_startup" type="bool" label="Xóa cache addon mỗi lần khởi động" default="false"/>

		<setting label="[COLOR yellow]Quản lý Cache[/COLOR]" type="lsep"/>
		<setting id="auto_clear_cache" type="bool" label="Tự động xóa cache cũ" default="true"/>
		<setting id="cache_expiry_days" type="slider" label="Số ngày giữ cache" default="3" range="1,1,30" option="int" visible="eq(-1,true)"/>
		<setting id="last_cache_cleanup" type="text" label="Lần xóa cache cuối" visible="false" default=""/>

		<setting label="[COLOR yellow]Trình phát video[/COLOR]" type="lsep"/>
