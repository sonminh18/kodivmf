		<setting id="external_player_path" type="text" label="Đường dẫn trình phát video ngoài" default="" visible="false" />
	</category>

	<!-- Giao diện -->
	<category label="[COLOR yellow]Giao diện[/COLOR]">
		<setting label="[COLOR yellow]View_mode skin.arctic.zephyr.mod[/COLOR]" type="lsep"/>
