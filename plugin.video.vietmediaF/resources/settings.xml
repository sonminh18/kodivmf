		<setting type="action" label="[COLOR orange]Kiểm tra tài khoản[/COLOR]" option="close" action="RunPlugin(plugin://plugin.video.vietmediaF/?action=get_user_information_fourshare)" />
	</category>

	<!-- Backup dữ liệu -->
	<category label="[COLOR yellow]Backup dữ liệu[/COLOR]">
		<setting label="[COLOR yellow]Thông tin đăng nhập[/COLOR]" type="lsep"/>
		<setting id="domainforbackup" type="select" label="[COLOR orange]Chọn dịch vụ e-mail[/COLOR]" values="@gmail.com|@1share.xyz|@fshare.vip|@fshare.xyz|@kodi.vn|@vietmediaf.net|@hotmail.com|@yahoo.com|@outlook.com|@fshare.vn|@yandex.com|@icloud.com|@mail.com|@gmx.com|@aol.com" default="@gmail.com"/>
		<setting id="username_backup" type="text" label="[COLOR orange]E-mail hoặc tài khoản:[/COLOR]" default=""/>
		<setting id="password_backup" type="text" option="hidden" label="[COLOR orange]Mật khẩu:[/COLOR]" default=""/>

		<setting label="[COLOR yellow]Thiết lập backup[/COLOR]" type="lsep"/>
		<setting id="service.backup" type="select" label="[COLOR orange]Chọn dịch vụ lưu trữ[/COLOR]" values="4share|fshare" default="fshare"/>

		<setting label="[COLOR yellow]Thao tác[/COLOR]" type="lsep"/>
