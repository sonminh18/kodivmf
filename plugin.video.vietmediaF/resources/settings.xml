	<!-- Tài khoản 4share -->
	<category label="[COLOR yellow]Tài khoản 4share[/COLOR]">
		<setting label="[COLOR yellow]Thông tin đăng nhập[/COLOR]" type="lsep"/>
		<setting id="4share_username" type="text" label="[COLOR orange]E-mail hoặc tài khoản:[/COLOR]" default=""/>
		<setting id="4share_password" type="text" option="hidden" label="[COLOR orange]Mật khẩu:[/COLOR]" default=""/>

		<setting label="[COLOR yellow]Thông tin hệ thống[/COLOR]" type="lsep"/>
		<setting id="session4s" type="text" visible="false" default="0"/>
		<setting id="timelog4s" type="text" visible="false" default="0"/>

