	<category label="[COLOR yellow]Tiện ích[/COLOR]">
		<setting label="[COLOR yellow]Hệ thống[/COLOR]" type="lsep"/>
		<setting type="action" label="[COLOR orange]View log[/COLOR]" option="close" action="RunPlugin(plugin://plugin.program.openwizard/?mode=viewerrorlog)" />
		<setting type="action" label="[COLOR orange]Xóa cache[/COLOR]" option="close" action="ActivateWindow(10001,&quot;plugin://plugin.program.openwizard/?mode=maint&amp;name=clean&quot;)" />
		<setting type="action" label="[COLOR orange]Thiết lập nâng cao[/COLOR]" option="close" action="RunPlugin(plugin://plugin.video.vietmediaF/?action=advanced_settings_menu)" />
		<setting label="Khởi động cùng hệ thống" type="bool" id="chayvmf" default="false"/>
		<setting id="download_path" type="folder" label="Thư mục lưu trữ file [COLOR dimgrey]Nhấn để thiết lập[/COLOR]"  default="" option="writeable" />
		<setting id="download_sub" type="folder" label="Thư mục Subtitle"  default="" option="writeable" />
		
		<setting label="[COLOR yellow]Tùy chọn tải xuống[/COLOR]" type="lsep"/>
		<setting id="download_method" type="enum" label="Phương thức hiển thị khi tải xuống" values="Thông báo đơn giản|Thanh tiến trình chi tiết" default="1"/>
